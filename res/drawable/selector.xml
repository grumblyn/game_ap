<?xml version="1.0" encoding="utf-8"?>
<!-- This file needs to go inside the /drawable folder. This file will create a drawable which
	will scale nicely for all densities. Because of this, we can put it in the /drawable folder. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
  <stroke android:width="1dp" android:color="#ffd5d5d5"/>
  <solid android:color="#aaFFFFFF"/>
  <padding
    android:left="2dp"
    android:right="2dp"
    android:top="2dp"
    android:bottom="2dp" />
  
  <corners
      android:topLeftRadius="5dp"
      android:topRightRadius="5dp"/>
</shape>